<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    android:gravity="center_vertical">

    <!-- Emergency Support Butonu -->
    <Button
        android:id="@+id/btn_emergency_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Emergency Support"
        android:textSize="20sp"
        android:backgroundTint="#1976D2"
        android:textColor="#FFFFFF"
        android:padding="16dp" />

    <!-- Positive Affirmations Butonu -->
    <Button
        android:id="@+id/btn_positive_affirmations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Positive Affirmations"
        android:textSize="18sp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="12dp" />

    <!-- Anxiety Tracker Butonu -->
    <Button
        android:id="@+id/btn_anxiety_tracker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Anxiety Tracker"
        android:textSize="18sp"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:padding="12dp" />
</LinearLayout>
